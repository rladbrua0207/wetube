extends base.pug

block content 
    div 
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype = "multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video")
        input(type="text", name="title", placeholder="title",  required)
        input(placeholder="Description", required, type="text", name="description")
        input(placeholder="Hashtags, separated by comma", required, type="text", name="hashtags")
        input(type="submit", value="Upolad Video")

block scripts 
    script(src="/static/js/recorder.js")