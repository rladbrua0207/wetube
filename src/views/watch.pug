extends base

block content
    div.app_container
        div#videoContainer(data-id=video._id)
            if(isHeroku)
                video(src= video.fileUrl, crossorigin)
            else 
                video(src="/" +video.fileUrl, crossorigin)


            div#videoControls.videoControls
                div.videoControls__play
                    span#play.videoControls__playBtn
                        i.fas.fa-play
                    div.videoControls__time
                        span#currenTime 00:00
                        span  / 
                        span#totalTime 00:00
                input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
                div.videoControls__volume
                    input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                div#right_btn
                    span#mute
                        i.fas.fa-volume-up
                    span#fullScreen
                        i.fas.fa-expand

       
        div.comment_container 
            if loggedIn
                .video__add-comments#comment
                    form.video_comment-form#commentForm
                        textarea(id ="textarea", cols="30", rows="5", placeholder="Write a nice comment...")
                        button Add Comment
            div.video__comments
                ul
                    each comment in video.comments.reverse()
                        li.video__comment(data-id=comment.id)
                            i.fas.fa-comment
                            span  #{comment.text} 
                            div
                                if(loggedInUser._id === String(comment.owner))
                                    span.delete_comment ❌
        div.video_data_container
            div.video__data
                div.video_hashtags=video.hashtags
                div.video_title=video.title
                div.video_description=video.description
                div.nav
                    span 조회수 
                    div.video_metaviews #{video.meta.views}ㆍ 
                    div.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
                hr
                div.footer
                    div.video__owner Uploaded by 
                        a(href=`/users/${video.owner._id}`)=video.owner.name
                    div.owner_selete
                        if String(video.owner._id) === String(loggedInUser._id)
                            a(href=`${video.id}/edit`) Edit Video
                            a(href=`${video.id}/delete`) Delete Video

block scripts
    script(src="/static/js/videoPlayer.js") 
    script(src="/static/js/commentSection.js")